<!--文章列表项 -->
<template name="artical_item">
<!--文章列表-->
    <view class="artical_list">
        <!--作者和时间-->
        <view class="author_time">
            <image class="head" src="/images//head1.png" ></image>
            <text class="name">{{author}}</text>
            <text class="time">{{dataTime}}</text>
        </view>
        <text class="title">{{title}}</text>
        <image class="artical_img" src="/images/sub1.png"></image>
        <text class="article_text">{{articletext}}</text>
        <view class="artical_like">
            <image class="artical_like_icon" src="/images/sc.png"></image>
            <text class="artical_like_text">12</text>
            <image class="artical_like_icon" src="/images/fx.png"></image>
            <text class="artical_like_text">30</text>
        </view>
    </view>  
</template>